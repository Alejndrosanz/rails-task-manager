<h1 class="m-4">New Task</h1>
<div class="d-flex justify-content-center">
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
</div>
<div class="d-flex justify-content-center">
<%= link_to "Back to list!", tasks_path%>
</div>
